{
  "name": "astro-takumi",
  "version": "1.1.10",
  "author": {
    "name": "Vikas Kapadiya",
    "email": "vikas@kapadiya.net",
    "url": "https://kapadiya.net"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vikas5914/astro-takumi.git"
  },
  "main": "dist/index.js",
  "dependencies": {
    "@takumi-rs/core": "^0.66.3",
    "@takumi-rs/helpers": "^0.66.3",
    "jsdom": "^27.2.0",
    "react": "^19.2.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "@fontsource/roboto": "^5.2.9",
    "@tsconfig/node20": "^20.1.8",
    "@tsconfig/strictest": "^2.0.8",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.7",
    "astro": "^5.16.2",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "install": "^0.13.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vitest": "^4.0.14"
  },
  "bugs": {
    "url": "https://github.com/vikas5914/astro-takumi/issues"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "description": "Generate Open Graph images for your Astro site using Takumi.",
  "files": [
    "dist",
    "src",
    "package.json",
    "README.md",
    "LICENSE",
    "package-lock.json",
    "CHANGELOG.md"
  ],
  "homepage": "https://github.com/vikas5914/astro-takumi",
  "keywords": [
    "takumi",
    "astro-takumi",
    "astro-integration",
    "withastro",
    "seo",
    "ui",
    "renderer"
  ],
  "license": "GPL-3.0-only",
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*": "prettier --ignore-unknown --write"
  },
  "prettier": {
    "printWidth": 120
  },
  "scripts": {
    "prepare": "husky",
    "lint": "eslint src --cache",
    "build": "tsc",
    "watch": "tsc -w",
    "test": "vitest",
    "changeset": "changeset",
    "validate": "npm run build && npm test && npm run lint",
    "bump": "changeset version && npm install",
    "release": "npm run validate && npm run bump && changeset publish",
    "ci-version": "changeset version && npm install --no-package-lock",
    "ci-publish": "npm run build && npm test && npm run lint && changeset publish"
  },
  "type": "module",
  "types": "dist/index.d.ts"
}
